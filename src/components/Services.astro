---
import type { ServicesProps } from '../types/ServicesProps';
const services: ServicesProps = {
  services: [
    { title: 'Individual Therapy', description: 'Personalized, evidence-based support for adults and teens.', icon: 'user' },
    { title: 'Couples Counseling', description: 'Strengthen communication and connection in your relationship.', icon: 'heart' },
    { title: 'Family Therapy', description: 'Foster understanding and healing for families of all kinds.', icon: 'users' },
    { title: 'Teletherapy', description: 'Convenient, secure online sessions from the comfort of your home.', icon: 'video' },
  ],
};
---
<section id="services" aria-labelledby="services-heading" class="py-16 px-4 bg-gradient-to-br from-primary/5 to-white">
  <div class="max-w-4xl mx-auto">
    <h2 id="services-heading" class="text-3xl font-bold text-primary mb-8">Our Services</h2>
    <ul class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.services.map(service => (
        <li tabindex="0" class="bg-white rounded-lg shadow p-6 focus:outline-none focus-visible:ring-2 focus-visible:ring-primary transition">
          <svg aria-hidden="true" role="img" class="w-8 h-8 mb-2 text-primary mx-auto"><!-- icon here --></svg>
          <span class="sr-only">{service.title} Icon</span>
          <h3 class="font-semibold text-lg mb-2">{service.title}</h3>
          <p>{service.description}</p>
        </li>
      ))}
    </ul>
  </div>
</section>
