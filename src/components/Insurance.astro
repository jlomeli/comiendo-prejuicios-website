---
import type { InsuranceProps } from '../types/InsuranceProps';
const insurance: InsuranceProps = {
  providers: ['Blue Cross', 'Aetna', 'Cigna', 'UnitedHealthcare'],
  selfPayInfo: 'Self-pay options available. Sliding scale for those in need.',
  costs: 'Session fees start at $120. Contact us for details.',
};
---
<section id="insurance" aria-labelledby="insurance-heading" class="py-16 px-4 bg-gradient-to-br from-primary/5 to-white">
  <div class="max-w-4xl mx-auto">
    <h2 id="insurance-heading" class="text-3xl font-bold text-primary mb-8">Insurance & Payment</h2>
    <p class="text-neutral-dark mb-4">
      We accept most major insurance plans and offer flexible payment options. Please contact us to verify your coverage.
    </p>
    <ul class="flex flex-wrap gap-4">
      {insurance.providers.map(provider => (
        <li class="bg-white rounded shadow px-4 py-2">{provider}</li>
      ))}
      <li class="bg-white rounded shadow px-4 py-2">Self-Pay</li>
    </ul>
    <p class="mt-4 text-neutral-dark">{insurance.selfPayInfo}</p>
    <p class="text-neutral-dark font-semibold">{insurance.costs}</p>
  </div>
</section>
