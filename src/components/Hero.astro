---
import type { HeroProps } from '../types/HeroProps';

const hero: HeroProps = {
  title: "Transformative Therapy for Mind and Spirit",
  subtitle: "Embrace healing and growth in a safe, supportive environment",
  image: {
    src: "/images/calm-office-space.jpg",
    alt: "A calming therapy office space with natural light"
  }
};
---

<section 
  id="hero" 
  class="relative min-h-[600px] max-h-[800px] flex items-center justify-center overflow-hidden mt-16 md:mt-20 mx-6"
  aria-labelledby="hero-heading"
>
  <div class="absolute inset-0 rounded-3xl overflow-hidden z-0" aria-hidden="true">
    <img
      src={hero.image.src}
      alt={hero.image.alt}
      class="w-full h-full object-cover"
      loading="eager"
      fetchpriority="high"
    />
    <div class="absolute inset-0 gradient-overlay z-10"></div>
  </div>

  <div class="container mx-auto px-6 relative z-20 text-center text-white py-20 md:py-32">
    <div class="max-w-3xl mx-auto">
      <h1 id="hero-heading" class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold mb-6 leading-tight drop-shadow-lg" data-animation="fade-in">
        <span class="text-highlight-pink">{hero.title}</span>
      </h1>
      <p class="text-xl md:text-2xl mb-8 max-w-2xl mx-auto drop-shadow-md" data-animation="fade-in">
        {hero.subtitle}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center" data-animation="fade-in">
        <a
          href="#contact"
          class="btn btn-primary text-white px-8 py-3 text-lg transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-primary"
          aria-label="Schedule a therapy consultation"
        >
          Schedule a Consultation
        </a>
        <a
          href="#services"
          class="btn bg-white/10 hover:bg-white/20 backdrop-blur-sm text-white px-8 py-3 text-lg transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-primary/30 rounded-full"
          aria-label="Explore therapy services"
        >
          Explore Services
        </a>
      </div>
    </div>
  </div>

  {/* Scroll Indicator */}
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-20 animate-bounce">
    <a
      href="#about"
      class="text-white opacity-80 hover:opacity-100 transition-opacity duration-200 focus:outline-none focus:ring-2 focus:ring-white rounded-full p-2"
      aria-label="Scroll down to about section"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        aria-hidden="true"
        role="img"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 14l-7 7m0 0l-7-7m7 7V3"
        />
      </svg>
    </a>
  </div>
</section>
<script type="module" src="/src/scripts/gsap-fadein.ts"></script>
