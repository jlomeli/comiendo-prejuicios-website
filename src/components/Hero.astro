---
import type { HeroProps } from '../types/HeroProps';
const hero: HeroProps = {
  title: 'Compassionate Therapy for Modern Life',
  description: 'A welcoming, professional space for your mental well-being. Evidence-based, inclusive, and tailored to you.',
  ctaLabel: 'Book a Consultation',
  ctaHref: '#contact',
};
const { title, description, ctaLabel, ctaHref } = hero;
---
<section aria-labelledby="hero-heading" class="relative flex flex-col items-center justify-center min-h-[60vh] bg-gradient-to-br from-primary/10 to-neutral-100 py-16 px-4 text-center">
  <h1 id="hero-heading" class="text-4xl md:text-5xl font-bold mb-4 text-primary">{title}</h1>
  <p class="text-lg md:text-xl text-neutral-dark mb-8 max-w-2xl mx-auto">{description}</p>
  <img
    src="/images/calm-office-space.jpg"
    alt="Calm, welcoming therapist office with natural light"
    loading="lazy"
    class="rounded-lg shadow-lg mx-auto mb-8 max-w-full h-auto"
    width="600"
    height="400"
  />
  <a href={ctaHref} class="inline-block bg-primary text-white px-8 py-3 rounded shadow focus:outline-none focus-visible:ring-2 focus-visible:ring-primary transition font-semibold">
    {ctaLabel}
  </a>
</section>
