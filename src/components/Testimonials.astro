---
import type { TestimonialsProps } from '../types/TestimonialsProps';
const testimonials: TestimonialsProps = {
  testimonials: [
    { quote: 'I felt truly heard and supported. Therapy here changed my life.', author: 'Anonymous' },
    { quote: 'A safe, welcoming space where I could be myself.', author: 'Anonymous' },
    { quote: 'Professional, compassionate, and effective.', author: 'Anonymous' },
  ],
};
---
<section id="testimonials" aria-labelledby="testimonials-heading" class="py-16 px-4 bg-white">
  <div class="max-w-4xl mx-auto">
    <h2 id="testimonials-heading" class="text-3xl font-bold text-primary mb-8">Testimonials</h2>
    <ul class="space-y-8">
      {testimonials.testimonials.map(testimonial => (
        <li tabindex="0" class="bg-primary/5 rounded-lg p-6 shadow focus:outline-none focus-visible:ring-2 focus-visible:ring-primary transition">
          <blockquote class="italic text-neutral-dark mb-2">
            “{testimonial.quote}”
          </blockquote>
          <cite class="block text-primary font-semibold">– {testimonial.author}</cite>
        </li>
      ))}
    </ul>
  </div>
</section>
