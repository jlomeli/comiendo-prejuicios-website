---
import type { InsuranceProps } from '../types/InsuranceProps';

const insurance: InsuranceProps = {
  providers: [
    'Blue Cross Blue Shield',
    'Aetna',
    'United Healthcare',
    'Cigna',
    'Medicare'
  ],
  selfPayInfo: 'Self-pay options are available for those without insurance coverage.',
  costs: 'Initial consultation: $150 | Regular sessions: $120'
};
---

<section id="insurance" class="py-20 bg-gradient-to-br from-white to-primary/5">
  <div class="container mx-auto px-6">
    <div class="max-w-2xl mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-heading text-primary mb-12 font-semibold">Insurance & Fees</h2>
      <h3 class="text-xl font-heading font-medium mb-2 text-neutral-dark">Accepted Providers</h3>
      <ul class="mb-4 list-disc list-inside text-neutral-dark">
        {insurance.providers.map(provider => (
          <li>{provider}</li>
        ))}
      </ul>
      <p class="mb-2 text-neutral-dark">{insurance.selfPayInfo}</p>
      <p class="text-neutral-dark font-semibold">{insurance.costs}</p>
      <div class="mt-8">
        <a
          href="#contact"
          class="inline-block bg-primary hover:bg-primary-dark text-white font-bold py-3 px-8 rounded-full transition-colors duration-300"
        >
          Contact for Details
        </a>
      </div>
    </div>
  </div>
</section>
