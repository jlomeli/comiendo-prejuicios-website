---
import type { ContactProps } from '../types/ContactProps';
const contact: ContactProps = {
  address: '123 Main St, Suite 200, Your City, ST 12345',
  hours: 'Mon–Fri: 9am–6pm',
  responseTime: 'We respond within 1 business day.',
  emergencyResources: 'If you are in crisis, call 988 or visit your nearest emergency room.',
};
---
<section id="contact" aria-labelledby="contact-heading" class="py-16 px-4 bg-white">
  <div class="max-w-2xl mx-auto">
    <h2 id="contact-heading" class="text-3xl font-bold text-primary mb-8">Contact</h2>
    <form aria-label="Contact form for therapy inquiries" class="space-y-6">
      <div>
        <label for="name" class="block mb-2 font-semibold">Name</label>
        <input
          id="name"
          name="name"
          type="text"
          required
          class="border rounded px-4 py-2 w-full focus:outline-none focus-visible:ring-2 focus-visible:ring-primary"
          aria-required="true"
        />
      </div>
      <div>
        <label for="email" class="block mb-2 font-semibold">Email</label>
        <input
          id="email"
          name="email"
          type="email"
          required
          class="border rounded px-4 py-2 w-full focus:outline-none focus-visible:ring-2 focus-visible:ring-primary"
          aria-required="true"
        />
      </div>
      <div>
        <label for="message" class="block mb-2 font-semibold">Message</label>
        <textarea
          id="message"
          name="message"
          required
          rows="4"
          class="border rounded px-4 py-2 w-full focus:outline-none focus-visible:ring-2 focus-visible:ring-primary"
          aria-required="true"
        ></textarea>
      </div>
      <button
        type="submit"
        class="bg-primary text-white px-8 py-3 rounded shadow focus:outline-none focus-visible:ring-2 focus-visible:ring-primary transition font-semibold"
      >
        Send Message
      </button>
    </form>
    <div class="mt-8 bg-neutral_light rounded-xl shadow-md p-6" data-animation="fade-in">
      <address class="not-italic mb-4 text-neutral_dark">
        <strong>Address:</strong> {contact.address}
      </address>
      <p class="mb-2 text-neutral_dark"><strong>Hours:</strong> {contact.hours}</p>
      <p class="mb-2 text-neutral_dark"><strong>Response Time:</strong> {contact.responseTime}</p>
      <p class="text-sm text-secondary mt-4">{contact.emergencyResources}</p>
    </div>
  </div>
</section>
