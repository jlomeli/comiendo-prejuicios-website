---
import type { TestimonialsProps } from '../types/TestimonialsProps';

// Sample testimonial data
const testimonials: TestimonialsProps = {
  testimonials: [
    {
      quote: "I felt truly heard and supported throughout my journey. The therapy sessions here have made a remarkable difference in my life, providing me with tools and insights I use daily.",
      author: "Maria Rodriguez",
      role: "Working Professional",
      image: {
        src: "/images/testimonials/placeholder-1.jpg",
        alt: "Profile photo of Maria Rodriguez"
      },
      rating: 5,
      date: "2024-02-15"
    },
    {
      quote: "The safe and welcoming environment created here allowed me to open up and work through challenges I've been facing for years. The approach is both professional and deeply compassionate.",
      author: "James Chen",
      role: "Student",
      image: {
        src: "/images/testimonials/placeholder-2.jpg",
        alt: "Profile photo of James Chen"
      },
      rating: 5,
      date: "2024-01-20"
    },
    {
      quote: "As someone who was initially skeptical about therapy, I can now say it was one of the best decisions I've made. The guidance and support received here have been transformative.",
      author: "Sarah Thompson",
      role: "Parent",
      image: {
        src: "/images/testimonials/placeholder-3.jpg",
        alt: "Profile photo of Sarah Thompson"
      },
      rating: 5,
      date: "2024-03-01"
    },
  ],
};

// Helper function to render stars
function renderStars(rating: number) {
  return Array.from({ length: 5 }, (_, i) => i < rating ? 'filled' : 'empty');
}
---

<section id="testimonials" aria-labelledby="testimonials-heading" class="relative py-20 overflow-hidden">
  {/* Background Pattern */}
  <div class="absolute inset-0 pointer-events-none bg-neutral_light">
    <div class="absolute inset-0 opacity-20" style="background-image: radial-gradient(circle at 1px 1px, var(--tw-colors-primary) 1px, transparent 0); background-size: 40px 40px;"></div>
    <div class="absolute top-0 left-0 w-full h-64 bg-gradient-to-b from-white to-transparent"></div>
    <div class="absolute bottom-0 left-0 w-full h-64 bg-gradient-to-t from-white to-transparent"></div>
  </div>
  
  <div class="container mx-auto px-6 relative z-10">
    {/* Section Header */}
    <div class="text-center mb-16">
      <h2 
        id="testimonials-heading" 
        class="text-4xl md:text-5xl font-heading text-primary mb-4 font-semibold" 
        data-animation="fade-in"
      >
        What Our Clients Say
      </h2>
      <p class="text-lg text-neutral_dark/80 max-w-2xl mx-auto">
        Real stories from real people who have experienced transformation through our therapy services.
      </p>
    </div>
    
    {/* Testimonials Grid */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 auto-rows-auto">
      {testimonials.testimonials.map((testimonial, index) => (
        <div 
          class:list={[
            "group bg-white rounded-2xl p-8 relative transition-all duration-500",
            "hover:shadow-[0_20px_40px_-15px_rgba(0,0,0,0.1)] hover:-translate-y-1",
            "focus-within:shadow-[0_20px_40px_-15px_rgba(0,0,0,0.1)] focus-within:-translate-y-1",
            "border border-neutral_dark/5",
            // Alternate card heights for masonry effect
            index % 2 === 0 ? "row-span-1" : "row-span-2 md:translate-y-12"
          ]}
          data-animation="fade-in"
          style={`animation-delay: ${index * 150}ms`}
        >
          {/* Quote Icon */}
          <svg 
            aria-hidden="true" 
            class="absolute -top-6 -left-6 w-12 h-12 text-primary/10 transform -rotate-6 transition-transform duration-300 group-hover:scale-110 group-hover:-rotate-12"
            xmlns="http://www.w3.org/2000/svg" 
            fill="currentColor" 
            viewBox="0 0 24 24"
          >
            <path d="M11.625 16.5a4.125 4.125 0 11-8.25 0V15a.75.75 0 01.75-.75h3a.75.75 0 00.75-.75V9.75a.75.75 0 00-.75-.75h-3a.75.75 0 01-.75-.75V7.5a4.125 4.125 0 118.25 0v9zm9 0a4.125 4.125 0 11-8.25 0V15a.75.75 0 01.75-.75h3a.75.75 0 00.75-.75V9.75a.75.75 0 00-.75-.75h-3a.75.75 0 01-.75-.75V7.5a4.125 4.125 0 118.25 0v9z" />
          </svg>

          {/* Profile Section */}
          <div class="flex items-center mb-6">
            <div class="relative">
              <div class="w-16 h-16 rounded-full overflow-hidden border-2 border-primary/10 shadow-sm transform transition-transform duration-300 group-hover:scale-105">
                <img 
                  src={testimonial.image.src} 
                  alt={testimonial.image.alt}
                  class="w-full h-full object-cover"
                  loading="lazy"
                  width="64"
                  height="64"
                />
              </div>
              <div class="absolute -bottom-1 -right-1 bg-primary text-white rounded-full p-1 shadow-lg transform transition-transform duration-300 group-hover:scale-110">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <h3 class="font-heading font-semibold text-lg text-neutral_dark group-hover:text-primary transition-colors duration-300">
                {testimonial.author}
              </h3>
              {testimonial.role && 
                <p class="text-sm text-secondary">
                  {testimonial.role}
                </p>
              }
            </div>
          </div>

          {/* Rating Stars */}
          <div 
            class="flex gap-1 mb-4" 
            aria-label={`Rated ${testimonial.rating} out of 5 stars`}
          >
            {renderStars(testimonial.rating).map((type) => (
              <svg 
                xmlns="http://www.w3.org/2000/svg" 
                viewBox="0 0 24 24" 
                fill={type === 'filled' ? 'currentColor' : 'none'}
                stroke="currentColor"
                class={`w-5 h-5 transition-all duration-300 ${
                  type === 'filled' 
                    ? 'text-yellow-400 group-hover:text-yellow-500 group-hover:scale-110' 
                    : 'text-gray-300'
                }`}
                aria-hidden="true"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
              </svg>
            ))}
          </div>

          {/* Quote */}
          <blockquote class="relative">
            <p class="text-neutral_dark/90 leading-relaxed mb-4 transition-colors duration-300 group-hover:text-neutral_dark">
              {testimonial.quote}
            </p>
            {testimonial.date && (
              <footer class="text-sm text-secondary/80 mt-4 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                </svg>
                <time datetime={testimonial.date}>
                  {new Date(testimonial.date).toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'long'
                  })}
                </time>
              </footer>
            )}
          </blockquote>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  /* Base transitions */
  .group {
    transform: translateZ(0);
    backface-visibility: hidden;
    perspective: 1000px;
    will-change: transform, box-shadow;
  }

  /* Ensure smooth image scaling */
  img {
    transform: translateZ(0);
    will-change: transform;
  }

  /* Optimize paint performance */
  .group:hover {
    z-index: 1;
  }

  /* Fade in animation */
  [data-animation="fade-in"] {
    opacity: 0;
    animation: fadeIn 0.6s ease-out forwards;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Stagger children animations */
  @media (prefers-reduced-motion: no-preference) {
    .grid > div {
      opacity: 0;
      animation: fadeIn 0.6s ease-out forwards;
    }
  }

  /* Disable animations if user prefers reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .grid > div {
      opacity: 1;
      animation: none;
    }
  }
</style>
