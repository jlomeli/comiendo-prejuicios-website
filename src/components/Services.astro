---
import type { ServicesProps } from '../types/ServicesProps';
const services: ServicesProps = {
  services: [
    { title: 'Individual Therapy', description: 'Personalized, evidence-based support for adults and teens.', icon: 'user' },
    { title: 'Couples Counseling', description: 'Strengthen communication and connection in your relationship.', icon: 'heart' },
    { title: 'Family Therapy', description: 'Foster understanding and healing for families of all kinds.', icon: 'users' },
    { title: 'Teletherapy', description: 'Convenient, secure online sessions from the comfort of your home.', icon: 'video' },
  ],
};
---
<section class="relative py-20 bg-white overflow-hidden">
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-0 left-0 w-1/2 h-1/2 bg-gradient-to-br from-primary/10 to-accent/0 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-0 w-1/3 h-1/3 bg-gradient-to-tr from-secondary/10 to-primary/0 rounded-full blur-2xl"></div>
  </div>
  <div class="container mx-auto px-6 relative z-10">
    <h2 id="services-heading" class="text-3xl md:text-4xl font-heading text-primary mb-12 font-semibold text-center" data-animation="fade-in">Our Services</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.services.map(service => (
        <div class="bg-neutral_light rounded-2xl shadow-lg p-8 flex flex-col items-center text-center transition-transform duration-300 hover:-translate-y-2 hover:shadow-xl focus-within:ring-2 focus-within:ring-primary outline-none" tabindex="0" data-animation="fade-in">
          <div class="mb-5 text-primary">
            <span class={`icon-${service.icon} text-5xl`} aria-hidden="true"></span>
          </div>
          <h3 class="text-xl font-heading font-medium mb-2 text-neutral_dark">{service.title}</h3>
          <p class="text-base text-neutral_dark opacity-90">{service.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
