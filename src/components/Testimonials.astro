---
import type { TestimonialsProps } from '../types/TestimonialsProps';
const testimonials: TestimonialsProps = {
  testimonials: [
    { quote: 'I felt truly heard and supported. Therapy here changed my life.', author: 'Anonymous' },
    { quote: 'A safe, welcoming space where I could be myself.', author: 'Anonymous' },
    { quote: 'Professional, compassionate, and effective.', author: 'Anonymous' },
  ],
};
---
<section id="testimonials" aria-labelledby="testimonials-heading" class="relative py-20 bg-neutral_light overflow-hidden">
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-1/4 left-0 w-1/3 h-1/3 bg-gradient-to-br from-accent/10 to-primary/0 rounded-full blur-2xl"></div>
    <div class="absolute bottom-0 right-0 w-1/4 h-1/4 bg-gradient-to-tr from-secondary/10 to-primary/0 rounded-full blur-2xl"></div>
  </div>
  <div class="container mx-auto px-6 relative z-10">
    <h2 id="testimonials-heading" class="text-3xl md:text-4xl font-heading text-primary mb-12 font-semibold text-center" data-animation="fade-in">Testimonials</h2>
    <ul class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {testimonials.testimonials.map(testimonial => (
        <li tabindex="0" class="bg-white rounded-2xl shadow-lg p-8 relative transition-shadow duration-300 hover:shadow-xl focus:outline-none focus-visible:ring-2 focus-visible:ring-primary" data-animation="fade-in">
          <svg aria-hidden="true" role="img" class="absolute -top-6 left-6 w-10 h-10 text-accent opacity-30"><!-- icon --></svg>
          <span class="sr-only">Quote icon</span>
          <p class="text-lg italic text-neutral_dark mb-4">
            <span aria-hidden="true" class="text-2xl text-accent align-top mr-1">&ldquo;</span>{testimonial.quote}<span aria-hidden="true" class="text-2xl text-accent align-bottom ml-1">&rdquo;</span>
          </p>
          <footer class="text-secondary text-sm">{testimonial.author}</footer>
        </li>
      ))}
    </ul>
  </div>
</section>
