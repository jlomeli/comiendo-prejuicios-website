---
import { getEntry } from 'astro:content';
import type { AboutProps } from '../types/AboutProps';

const claudia = await getEntry('team', 'claudia-ornelas');
if (!claudia) {
  throw new Error('Could not find team member: claudia-ornelas');
}
const { name, credentials } = claudia.data;

const about: AboutProps = {
  intro: "Welcome to a space where healing and growth intertwine. As a dedicated therapist, I believe in creating a warm, non-judgmental environment where you can explore your thoughts and feelings freely.",
  image: {
    src: "/images/therapist-portrait.jpg",
    alt: `Professional portrait of ${name}, ${credentials}`
  }
};
---

<section id="about" aria-labelledby="about-heading" class="py-20 bg-background relative overflow-hidden mx-6">
  <div class="container mx-auto px-6 relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      <div class="relative mx-auto max-w-sm w-full aspect-square" data-animation="fade-in">
        <div class="absolute inset-0 bg-primary/10 rounded-3xl transform -rotate-3 translate-x-4 translate-y-4" aria-hidden="true"></div>
        <div class="relative rounded-3xl overflow-hidden shadow-xl w-full h-full">
          <img 
            src={about.image.src} 
            alt={about.image.alt} 
            class="w-full h-full object-cover" 
            loading="lazy" 
          />
        </div>
      </div>
      <div class="max-w-2xl" data-animation="fade-in">
        <h2 id="about-heading" class="text-3xl md:text-4xl font-heading text-secondary mb-6 font-bold">About {name}</h2>
        <p class="text-primary font-medium text-xl mb-6">{credentials}</p>
        <div class="mb-8 relative">
          <svg class="absolute -top-6 -left-6 w-12 h-12 text-primary/20 transform -rotate-6" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M11.625 16.5a4.125 4.125 0 11-8.25 0V15a.75.75 0 01.75-.75h3a.75.75 0 00.75-.75V9.75a.75.75 0 00-.75-.75h-3a.75.75 0 01-.75-.75V7.5a4.125 4.125 0 118.25 0v9zm9 0a4.125 4.125 0 11-8.25 0V15a.75.75 0 01.75-.75h3a.75.75 0 00.75-.75V9.75a.75.75 0 00-.75-.75h-3a.75.75 0 01-.75-.75V7.5a4.125 4.125 0 118.25 0v9z" />
          </svg>
          <p class="text-lg text-secondary">{about.intro}</p>
        </div>
        <div class="space-x-4">
          <a
            href="/about"
            class="btn btn-primary"
            aria-label="Learn more about therapist biography and qualifications"
          >
            Learn More About Me
          </a>
          <a
            href="#contact"
            class="btn btn-outline"
            aria-label="Go to contact form"
          >
            Contact Me
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="absolute -bottom-24 -right-24 w-64 h-64 bg-primary/5 rounded-full blur-3xl" aria-hidden="true"></div>
  <div class="absolute -top-24 -left-24 w-64 h-64 bg-accent/5 rounded-full blur-3xl" aria-hidden="true"></div>
</section>
