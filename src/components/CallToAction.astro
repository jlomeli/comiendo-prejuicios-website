---
import type { CallToActionProps } from '../types/CallToActionProps';
const cta: CallToActionProps = {
  ctaLabel: 'Start Your Journey',
  ctaHref: '#contact',
  reassurance: 'Taking the first step is courageous. Weâ€™re here to support you.'
};
---
<section class="relative py-20 bg-gradient-to-br from-primary to-secondary text-white text-center overflow-hidden">
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-0 left-1/2 w-1/3 h-1/3 bg-gradient-to-br from-white/20 to-accent/0 rounded-full blur-2xl"></div>
    <div class="absolute bottom-0 right-0 w-1/4 h-1/4 bg-gradient-to-tr from-secondary/20 to-white/0 rounded-full blur-2xl"></div>
  </div>
  <div class="container mx-auto px-6 relative z-10">
    <h2 id="cta-heading" class="text-4xl md:text-5xl font-heading font-bold mb-6 drop-shadow-lg" data-animation="fade-in">Ready to Begin?</h2>
    <p class="mb-10 text-lg md:text-xl text-white/90 max-w-2xl mx-auto drop-shadow" data-animation="fade-in">{cta.reassurance}</p>
    <a href={cta.ctaHref} class="inline-block bg-white text-primary font-heading font-semibold px-10 py-4 rounded-full shadow-lg hover:bg-secondary hover:text-white focus:outline-none focus-visible:ring-2 focus-visible:ring-white transition-colors duration-200 text-lg md:text-xl" data-animation="fade-in">
      {cta.ctaLabel}
    </a>
  </div>
</section>
