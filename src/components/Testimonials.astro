---
import type { TestimonialsProps } from '../types/TestimonialsProps';

// Sample testimonial data
const testimonials: TestimonialsProps = {
  testimonials: [
    {
      quote: "I felt truly heard and supported throughout my journey. The therapy sessions here have made a remarkable difference in my life, providing me with tools and insights I use daily.",
      author: "Maria Rodriguez",
      role: "Working Professional",
      image: {
        src: "/images/testimonials/placeholder-1.jpg",
        alt: "Profile photo of Maria Rodriguez"
      },
      rating: 5,
      date: "2024-02-15"
    },
    {
      quote: "The safe and welcoming environment created here allowed me to open up and work through challenges I've been facing for years. The approach is both professional and deeply compassionate.",
      author: "James Chen",
      role: "Student",
      image: {
        src: "/images/testimonials/placeholder-2.jpg",
        alt: "Profile photo of James Chen"
      },
      rating: 5,
      date: "2024-01-20"
    },
    {
      quote: "As someone who was initially skeptical about therapy, I can now say it was one of the best decisions I've made. The guidance and support received here have been transformative.",
      author: "Sarah Thompson",
      role: "Parent",
      image: {
        src: "/images/testimonials/placeholder-3.jpg",
        alt: "Profile photo of Sarah Thompson"
      },
      rating: 5,
      date: "2024-03-01"
    },
  ],
};

// Helper function to render stars
function renderStars(rating: number) {
  return Array.from({ length: 5 }, (_, i) => i < rating ? 'filled' : 'empty');
}
---

<section id="testimonials" aria-labelledby="testimonials-heading" class="relative py-20 bg-neutral_light overflow-hidden">
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-1/4 left-0 w-1/3 h-1/3 bg-gradient-to-br from-accent/10 to-primary/0 rounded-full blur-2xl"></div>
    <div class="absolute bottom-0 right-0 w-1/4 h-1/4 bg-gradient-to-tr from-secondary/10 to-primary/0 rounded-full blur-2xl"></div>
  </div>
  
  <div class="container mx-auto px-6 relative z-10">
    <h2 
      id="testimonials-heading" 
      class="text-3xl md:text-4xl font-heading text-primary mb-12 font-semibold text-center" 
      data-animation="fade-in"
    >
      What Our Clients Say
    </h2>
    
    <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.testimonials.map(testimonial => (
        <li 
          class="group bg-white rounded-2xl shadow-lg p-8 relative transition-all duration-300 hover:shadow-xl focus-within:shadow-xl hover:-translate-y-1 focus-within:-translate-y-1"
          data-animation="fade-in"
        >
          {/* Profile Image */}
          <div class="flex items-center mb-6">
            <div class="relative w-16 h-16 rounded-full overflow-hidden border-2 border-primary/10 shadow-sm">
              <img 
                src={testimonial.image.src} 
                alt={testimonial.image.alt}
                class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
                loading="lazy"
                width="64"
                height="64"
              />
            </div>
            <div class="ml-4">
              <h3 class="font-heading font-semibold text-lg text-neutral_dark">{testimonial.author}</h3>
              {testimonial.role && <p class="text-sm text-secondary">{testimonial.role}</p>}
            </div>
          </div>

          {/* Rating Stars */}
          <div class="flex gap-1 mb-4" aria-label={`Rated ${testimonial.rating} out of 5 stars`}>
            {renderStars(testimonial.rating).map((type) => (
              <svg 
                xmlns="http://www.w3.org/2000/svg" 
                viewBox="0 0 24 24" 
                fill={type === 'filled' ? 'currentColor' : 'none'}
                stroke="currentColor"
                class={`w-5 h-5 ${type === 'filled' ? 'text-yellow-400' : 'text-gray-300'}`}
                aria-hidden="true"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
              </svg>
            ))}
          </div>

          {/* Quote */}
          <blockquote class="relative">
            <svg 
              aria-hidden="true" 
              class="absolute -top-6 -left-6 w-12 h-12 text-primary/10 transform -rotate-6"
              xmlns="http://www.w3.org/2000/svg" 
              fill="currentColor" 
              viewBox="0 0 24 24"
            >
              <path d="M11.625 16.5a4.125 4.125 0 11-8.25 0V15a.75.75 0 01.75-.75h3a.75.75 0 00.75-.75V9.75a.75.75 0 00-.75-.75h-3a.75.75 0 01-.75-.75V7.5a4.125 4.125 0 118.25 0v9zm9 0a4.125 4.125 0 11-8.25 0V15a.75.75 0 01.75-.75h3a.75.75 0 00.75-.75V9.75a.75.75 0 00-.75-.75h-3a.75.75 0 01-.75-.75V7.5a4.125 4.125 0 118.25 0v9z" />
            </svg>
            <p class="text-neutral_dark relative z-10 mb-4">
              {testimonial.quote}
            </p>
            {testimonial.date && (
              <footer class="text-sm text-secondary mt-4">
                <time datetime={testimonial.date}>
                  {new Date(testimonial.date).toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'long'
                  })}
                </time>
              </footer>
            )}
          </blockquote>
        </li>
      ))}
    </ul>
  </div>
</section>

<style>
  /* Smooth transitions */
  .group {
    transform: translateZ(0);
    backface-visibility: hidden;
    perspective: 1000px;
    will-change: transform, box-shadow;
  }

  /* Ensure smooth image scaling */
  img {
    transform: translateZ(0);
    will-change: transform;
  }

  /* Optimize paint performance */
  .group:hover {
    z-index: 1;
  }
</style>
