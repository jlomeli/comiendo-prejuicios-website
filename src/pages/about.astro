---
import { getEntry } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';

const claudia = await getEntry('team', 'claudia-ornelas');
if (!claudia) {
  throw new Error('Could not find team member: claudia-ornelas');
}
const { name, credentials, intro, philosophy, missionStatement, imageUrl, education, specialties } = claudia.data;
---

<Layout title="About Us | Comiendo Prejuicios" description="Learn about our mission, philosophy, and the dedicated professionals at Comiendo Prejuicios who are committed to providing compassionate mental health services.">
  <main class="container mx-auto px-6 py-20">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-5xl font-heading text-primary mb-8 font-semibold text-center">About Us</h1>
      
      <p class="text-xl text-neutral-dark mb-12 text-center">
        At Comiendo Prejuicios, we're committed to providing compassionate and effective mental health support in a safe, inclusive environment. 
        Our mission is to destigmatize mental health and make quality therapy accessible to all.
      </p>
      
      <div class="flex flex-col md:flex-row items-center md:items-start gap-10 mb-12">
        <div class="flex-shrink-0 w-48 h-48 rounded-full overflow-hidden shadow-lg border-4 border-primary/50">
          <img src={imageUrl} alt={`Portrait of ${name}`} class="w-full h-full object-cover" loading="lazy" />
        </div>
        <div>
          <h2 class="text-3xl font-heading text-primary mb-2 font-semibold">Meet {name}</h2>
          <p class="text-secondary font-medium text-xl mb-4">{credentials}</p>
          <p class="text-lg text-neutral-dark">{intro}</p>
        </div>
      </div>

      <div class="prose lg:prose-xl mx-auto text-left">
        <h2 class="text-3xl font-heading text-primary mb-4 font-semibold">Our Philosophy</h2>
        <p>{philosophy}</p>

        {missionStatement && (
          <>
            <h2 class="text-3xl font-heading text-primary mt-8 mb-4 font-semibold">Our Mission</h2>
            <p>{missionStatement}</p>
          </>
        )}

        {education && education.length > 0 && (
          <>
            <h2 class="text-3xl font-heading text-primary mt-8 mb-4 font-semibold">Education</h2>
            <ul>
              {education.map((edu: string) => <li>{edu}</li>)}
            </ul>
          </>
        )}

        {specialties && specialties.length > 0 && (
          <>
            <h2 class="text-3xl font-heading text-primary mt-8 mb-4 font-semibold">Specialties</h2>
            <ul>
              {specialties.map((spec: string) => <li>{spec}</li>)}
            </ul>
          </>
        )}
      </div>

      <div class="text-center mt-12">
        <a href="/#contact" class="inline-block bg-primary text-white font-bold py-3 px-8 rounded-full hover:bg-primary-dark transition-colors duration-300">
          Contact {name}
        </a>
      </div>
    </div>
  </main>

  <Footer slot="footer" />
</Layout> 