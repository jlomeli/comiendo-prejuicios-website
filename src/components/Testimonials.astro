---
import type { TestimonialsProps } from '../types/TestimonialsProps';

// Sample testimonial data
const testimonials: TestimonialsProps = {
  testimonials: [
    {
      quote: "I felt truly heard and supported throughout my journey. The therapy sessions here have made a remarkable difference in my life, providing me with tools and insights I use daily.",
      author: "Maria Rodriguez",
      role: "Working Professional",
      image: {
        src: "/images/testimonials/placeholder-1.jpg",
        alt: "Profile photo of Maria Rodriguez"
      },
      rating: 5,
      date: "2024-02-15"
    },
    {
      quote: "The safe and welcoming environment created here allowed me to open up and work through challenges I've been facing for years. The approach is both professional and deeply compassionate.",
      author: "James Chen",
      role: "Student",
      image: {
        src: "/images/testimonials/placeholder-2.jpg",
        alt: "Profile photo of James Chen"
      },
      rating: 5,
      date: "2024-01-20"
    },
    {
      quote: "As someone who was initially skeptical about therapy, I can now say it was one of the best decisions I've made. The guidance and support received here have been transformative.",
      author: "Sarah Thompson",
      role: "Parent",
      image: {
        src: "/images/testimonials/placeholder-3.jpg",
        alt: "Profile photo of Sarah Thompson"
      },
      rating: 5,
      date: "2024-03-01"
    },
  ],
};

// Get unique roles for filter
const roles = [...new Set(testimonials.testimonials.map(t => t.role))];

// Helper function to render stars
function renderStars(rating: number) {
  return Array.from({ length: 5 }, (_, i) => i < rating ? 'filled' : 'empty');
}
---

<section id="testimonials" aria-labelledby="testimonials-heading" class="relative py-20 bg-background overflow-hidden mx-6">
  <div class="mint-section">
    <div class="container mx-auto px-6 relative z-10">
      {/* Section Header */}
      <div class="text-center mb-16">
        <h2 
          id="testimonials-heading" 
          class="text-3xl md:text-4xl font-heading text-primary mb-6 font-bold"
        >
          What Our Clients Say
        </h2>
        <p class="text-lg text-secondary max-w-2xl mx-auto">
          Real stories from real people who have experienced transformation through our therapy services.
        </p>
      </div>

      {/* Filters and Controls */}
      <div class="mb-8 space-y-4 bg-white/10 backdrop-blur-sm rounded-2xl p-4" role="search" aria-labelledby="filter-heading">
        <h3 id="filter-heading" class="sr-only">Filter and sort testimonials</h3>
        <div class="flex flex-wrap gap-4 items-center justify-between">
          <div class="flex flex-wrap gap-4 items-center">
            {/* Role Filter */}
            <div class="relative">
              <label for="role-filter" class="sr-only">Filter by role</label>
              <select 
                id="role-filter"
                class="role-filter appearance-none bg-white border border-white/20 rounded-full py-2 pl-4 pr-10 text-secondary focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-white"
              >
                <option value="all">All Roles</option>
                {roles.map(role => (
                  <option value={role}>{role}</option>
                ))}
              </select>
              <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-secondary" aria-hidden="true">
                <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                  <path d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"/>
                </svg>
              </div>
            </div>

            {/* Rating Filter */}
            <div class="relative">
              <label for="rating-filter" class="sr-only">Filter by minimum rating</label>
              <select 
                id="rating-filter"
                class="rating-filter appearance-none bg-white border border-white/20 rounded-full py-2 pl-4 pr-10 text-secondary focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-white"
              >
                <option value="">Any Rating</option>
                <option value="5">5 Stars</option>
                <option value="4">4+ Stars</option>
                <option value="3">3+ Stars</option>
              </select>
              <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-secondary" aria-hidden="true">
                <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                  <path d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"/>
                </svg>
              </div>
            </div>
          </div>

          {/* Sort Control */}
          <div class="relative">
            <label for="sort-select" class="sr-only">Sort testimonials</label>
            <select 
              id="sort-select"
              class="sort-select appearance-none bg-white border border-white/20 rounded-full py-2 pl-4 pr-10 text-secondary focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-white"
            >
              <option value="date-desc">Newest First</option>
              <option value="date-asc">Oldest First</option>
              <option value="rating-desc">Highest Rated</option>
              <option value="rating-asc">Lowest Rated</option>
            </select>
            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-secondary" aria-hidden="true">
              <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                <path d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"/>
              </svg>
            </div>
          </div>
        </div>

        {/* Active Filters Display */}
        <div 
          class="active-filters flex flex-wrap gap-2" 
          role="status" 
          aria-live="polite"
        ></div>
      </div>
      
      {/* Testimonials Grid */}
      <div 
        class="testimonials-grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 auto-rows-auto"
        role="list"
        aria-label="Client testimonials"
      >
        {testimonials.testimonials.map((testimonial, index) => (
          <div 
            class:list={[
              "testimonial-card group bg-background rounded-3xl p-8 relative transition-all duration-500",
              "hover:shadow-[0_20px_40px_-15px_rgba(0,0,0,0.1)] hover:-translate-y-1",
              "focus-within:shadow-[0_20px_40px_-15px_rgba(0,0,0,0.1)] focus-within:-translate-y-1",
              "border border-white/20 shadow-md",
              // Initial state for GSAP animation
              "opacity-0 translate-y-8",
              // Alternate card heights for masonry effect
              index % 2 === 0 ? "row-span-1" : "row-span-2 md:translate-y-12"
            ]}
            data-role={testimonial.role}
            data-rating={testimonial.rating}
            data-date={testimonial.date}
            style={`--card-index: ${index};`}
            role="listitem"
          >
            {/* Quote Icon */}
            <svg 
              aria-hidden="true" 
              class="absolute -top-6 -left-6 w-12 h-12 text-highlight-lavender transform -rotate-6 transition-transform duration-300 group-hover:scale-110 group-hover:-rotate-12"
              xmlns="http://www.w3.org/2000/svg" 
              fill="currentColor" 
              viewBox="0 0 24 24"
            >
              <path d="M11.625 16.5a4.125 4.125 0 11-8.25 0V15a.75.75 0 01.75-.75h3a.75.75 0 00.75-.75V9.75a.75.75 0 00-.75-.75h-3a.75.75 0 01-.75-.75V7.5a4.125 4.125 0 118.25 0v9zm9 0a4.125 4.125 0 11-8.25 0V15a.75.75 0 01.75-.75h3a.75.75 0 00.75-.75V9.75a.75.75 0 00-.75-.75h-3a.75.75 0 01-.75-.75V7.5a4.125 4.125 0 118.25 0v9z" />
            </svg>

            {/* Profile Section */}
            <div class="flex items-center mb-6">
              <div class="relative">
                <div class="w-16 h-16 rounded-full overflow-hidden border-2 border-primary/10 shadow-sm transform transition-transform duration-300 group-hover:scale-105">
                  <img 
                    src={testimonial.image.src} 
                    alt={testimonial.image.alt}
                    class="w-full h-full object-cover"
                    loading="lazy"
                    width="64"
                    height="64"
                  />
                </div>
                <div class="absolute -bottom-1 -right-1 bg-primary text-white rounded-full p-1 shadow-lg transform transition-transform duration-300 group-hover:scale-110" aria-hidden="true">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="font-heading font-semibold text-lg text-secondary group-hover:text-primary transition-colors duration-300">
                  {testimonial.author}
                </h3>
                {testimonial.role && 
                  <p class="text-sm text-primary">
                    {testimonial.role}
                  </p>
                }
              </div>
            </div>

            {/* Rating Stars */}
            <div 
              class="flex gap-1 mb-4" 
              aria-label={`Rated ${testimonial.rating} out of 5 stars`}
              role="img"
            >
              {renderStars(testimonial.rating).map((type) => (
                <svg 
                  xmlns="http://www.w3.org/2000/svg" 
                  viewBox="0 0 24 24" 
                  fill={type === 'filled' ? 'currentColor' : 'none'}
                  stroke="currentColor"
                  class={`w-5 h-5 transition-all duration-300 ${
                    type === 'filled' 
                      ? 'text-accent group-hover:text-accent group-hover:scale-110' 
                      : 'text-secondary/30'
                  }`}
                  aria-hidden="true"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
                </svg>
              ))}
            </div>

            {/* Quote with Expandable Text */}
            <blockquote class="testimonial-quote relative bg-highlight-lavender/10 rounded-2xl p-6 -mx-2" role="article">
              <p class="quote-content text-secondary/90 leading-relaxed">
                {testimonial.quote}
              </p>
              <button 
                class="expand-button mt-2 text-primary hover:text-primary-dark focus:outline-none focus:ring-2 focus:ring-primary rounded-md px-2 -mx-2 transition-colors duration-200"
                aria-expanded="false"
                aria-controls={`quote-content-${index}`}
              >
                <span class="button-text">Read more</span>
                <svg 
                  xmlns="http://www.w3.org/2000/svg" 
                  class="h-4 w-4 inline-block ml-1 transition-transform duration-200" 
                  fill="none" 
                  viewBox="0 0 24 24" 
                  stroke="currentColor"
                  aria-hidden="true"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              {testimonial.date && (
                <footer class="text-sm text-secondary/80 mt-4 flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                  </svg>
                  <time datetime={testimonial.date}>
                    {new Date(testimonial.date).toLocaleDateString('en-US', { 
                      year: 'numeric', 
                      month: 'long'
                    })}
                  </time>
                </footer>
              )}
            </blockquote>
          </div>
        ))}
      </div>

      {/* Pagination Controls */}
      <div 
        class="pagination-controls flex justify-center items-center gap-4 mt-12"
        role="navigation"
        aria-label="Testimonials pagination"
      ></div>
    </div>
  </div>
</section>

<script>
  import '../scripts/read-more.js';
  import '../scripts/testimonials-filter.ts';
</script>

<style>
  /* Base transitions */
  .testimonial-card {
    transform: translateZ(0);
    backface-visibility: hidden;
    perspective: 1000px;
    will-change: transform, opacity;
  }

  /* Ensure smooth image scaling */
  img {
    transform: translateZ(0);
    will-change: transform;
  }

  /* Optimize paint performance */
  .group:hover {
    z-index: 1;
  }

  /* Quote content styles */
  .testimonial-quote .quote-content {
    position: relative;
    transition: height 0.4s ease-out;
  }

  /* Expandable quote styles */
  .testimonial-quote.expandable .quote-content::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2rem;
    background: linear-gradient(to bottom, transparent, var(--color-background));
    pointer-events: none;
    opacity: 1;
    transition: opacity 0.2s ease-out;
  }

  .testimonial-quote.expanded .quote-content::after {
    opacity: 0;
  }

  /* Expand button icon rotation */
  .testimonial-quote.expanded .expand-button svg {
    transform: rotate(180deg);
  }

  /* Filter tag styles */
  .filter-tag {
    @apply inline-flex items-center gap-2 bg-primary/10 text-primary px-3 py-1 rounded-full text-sm;
  }

  .filter-tag .remove-filter {
    @apply hover:text-primary-dark focus:outline-none focus-visible:ring-2 focus-visible:ring-primary rounded-full;
  }

  /* Pagination button styles */
  .pagination-btn {
    @apply inline-flex items-center justify-center w-10 h-10 rounded-full bg-white border border-white/20 text-secondary hover:border-primary hover:text-primary focus:outline-none focus-visible:ring-2 focus-visible:ring-primary disabled:opacity-50 disabled:cursor-not-allowed transition-colors duration-200;
  }

  /* Disable animations if user prefers reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .testimonial-card {
      opacity: 1;
      transform: none;
    }

    .testimonial-quote .quote-content {
      transition: none;
    }
  }
</style>
