---
import type { CallToActionProps } from '../types/CallToActionProps';
const cta: CallToActionProps = {
  ctaLabel: 'Start Your Journey',
  ctaHref: '#contact',
  reassurance: 'Taking the first step is courageous. We\'re here to support you.'
};
---
<section 
  id="cta" 
  class="relative py-20 bg-accent-light text-primary text-center overflow-hidden"
  aria-labelledby="cta-heading"
>
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true">
    <div class="absolute top-0 left-1/2 w-1/3 h-1/3 bg-highlight-yellow/30 rounded-full blur-2xl"></div>
    <div class="absolute bottom-0 right-0 w-1/4 h-1/4 bg-highlight-lavender/30 rounded-full blur-2xl"></div>
  </div>
  <div class="container mx-auto px-6 relative z-10">
    <h2 id="cta-heading" class="text-4xl md:text-5xl font-heading font-bold mb-6 drop-shadow-lg" data-animation="fade-in">Ready to Begin?</h2>
    <p class="mb-10 text-lg md:text-xl text-primary/90 max-w-2xl mx-auto drop-shadow" data-animation="fade-in">{cta.reassurance}</p>
    <a 
      href={cta.ctaHref} 
      class="inline-block bg-accent text-primary font-heading font-semibold px-10 py-4 rounded-full shadow-lg hover:bg-highlight-yellow hover:text-primary-dark focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2 focus:ring-offset-accent-light transition-colors duration-200 text-lg md:text-xl relative overflow-hidden group" 
      data-animation="fade-in"
      aria-label="Start your therapy journey - contact us now"
    >
      <span class="relative z-20">{cta.ctaLabel}</span>
      <div class="absolute inset-0 bg-highlight-yellow/20 rounded-full scale-0 group-hover:scale-100 transition-transform duration-300 -z-10" aria-hidden="true"></div>
    </a>
  </div>
</section>
