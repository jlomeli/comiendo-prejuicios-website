---
import type { CallToActionProps } from '../types/CallToActionProps';
const cta: CallToActionProps = {
  ctaLabel: 'Start Your Journey',
  ctaHref: '#contact',
  reassurance: 'Taking the first step is courageous. Weâ€™re here to support you.'
};
---
<section class="relative py-20 bg-primary text-white text-center overflow-hidden">
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-0 left-1/2 w-1/3 h-1/3 bg-gradient-to-br from-white/10 to-accent/0 rounded-full blur-2xl"></div>
    <div class="absolute bottom-0 right-0 w-1/4 h-1/4 bg-gradient-to-tr from-secondary/10 to-white/0 rounded-full blur-2xl"></div>
  </div>
  <div class="container mx-auto px-6 relative z-10">
    <h2 id="cta-heading" class="text-3xl md:text-4xl font-heading font-semibold mb-4" data-animation="fade-in">Ready to Begin?</h2>
    <p class="mb-8 text-lg" data-animation="fade-in">{cta.reassurance}</p>
    <a href={cta.ctaHref} class="btn btn-secondary px-8 py-3 text-primary bg-white hover:bg-secondary hover:text-white transition-colors duration-200 shadow-lg rounded-lg" data-animation="fade-in">
      {cta.ctaLabel}
    </a>
  </div>
</section>
